<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Results:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Each bar represents apartments 1-9 and the amount of your selected preferences they match." />

    <TextView
        android:id="@+id/moreDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More details about each apartment are located on the next page." />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/mp_BarChart"
        android:layout_width="match_parent"
        android:layout_height="541dp" />

    <Button
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:text="View Details" />
</LinearLayout>
